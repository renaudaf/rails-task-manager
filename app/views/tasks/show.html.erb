<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><% if @task.completed == false %>
      <img src="https://www.flaticon.com/svg/static/icons/svg/25/25235.svg" alt="">
      <% else %>
      <img src="https://toppng.com/uploads/preview/checked-checkbox-icon-checkbox-ico-115632629493xkxpf63d8.png" alt="">
      <% end %> 
</p>

<%= link_to  "Edit task", edit_task_path %>
<%= link_to "Delete",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<%= link_to  "Back to list", tasks_path %>